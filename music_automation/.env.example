# Music Automation Environment Variables
# Copy this file to .env and fill in your actual values

# Google AI API Key (required for music analysis)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Alternative name (the system checks both)
GEMINI_API_KEY=your_google_api_key_here

# Telegram Bot Configuration (required for approvals)
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Get chat ID by messaging your bot and visiting:
# https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# System Configuration
PYTHONIOENCODING=utf-8

# Optional: Custom paths
COMFYUI_PATH=D:/Comfy_UI_V20/ComfyUI
OUTPUT_BASE_PATH=H:/dancers_content
MUSIC_API_PORT=8006